{
  "manifest_version": 3,
  "name": "TypingClub Story Translate Plugin",
  "version": "1.0",
  "description": "Replace English stories with Polish translations in TypingClub.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  }
}
