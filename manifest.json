{
  "manifest_version": 3,
  "name": "TypingClub Story Translator",
  "version": "1.0",
  "description": "Replace English stories with Polish translations in TypingClub.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["*://*.typingclub.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.typingclub.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  }
}
